@model List<BurgerMenu.Entites.Message>
@{
    ViewBag.Title = "Inbox";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Mesajlar Sayfası</h4>
            <p class="card-description">

            </p>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                           
                            <th>Gönderici</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Mesajı Aç</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                
                                <td>@item.SenderEMail</td>
                                @if (item.Title == "Soru")
                                {
                                    <td style="background-color:aqua">@item.Title</td>
                                }
                                @if (item.Title == "Deneme")
                                {
                                    <td style="background-color:antiquewhite">@item.Title</td>
                                }
                                @if (item.Title == "Öneri")
                                {
                                    <td style="background-color:darkcyan">@item.Title</td>
                                }
                                @if (item.Title == "Kontrol")
                                {
                                    <td style="background-color:chartreuse">@item.Title</td>
                                }
                                <td>@item.SendDate.ToShortDateString()</td>
                                <td><a href="/Areas/Views/Message/MessageDetail/" target="_blank" class="btn btn-primary" data-toggle="modal" data-target="#">Mesajı Aç</a></td>

                            </tr>
                        }


                    </tbody>
                </table>
                <a href="/Admin/Message/NewMessage/" class="btn btn-info">Yeni Mesaj Gönderin</a>
            </div>
        </div>
    </div>
</div>



